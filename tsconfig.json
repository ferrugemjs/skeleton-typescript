{
    "compilerOptions": {
        "target": "es5"
        ,"module": "amd"
        ,"moduleResolution": "classic"
        ,"outDir": "./public"
        ,"experimentalDecorators": true
        ,"noImplicitAny":true       
        ,"sourceMap": false        
        ,"declaration": false
        ,"removeComments":true
        ,"noEmitHelpers":true 
        ,"importHelpers":true
        ,"suppressImplicitAnyIndexErrors": true
        ,"baseUrl": "./"
        ,"lib": ["dom", "es6"]
        ,"paths": {
            "tslib" : ["node_modules/tslib/tslib.d.ts"],
            "v3rtigo" : ["node_modules/v3rtigo/dist/index.d.ts"]
        }
    },
    "exclude": [
        "node_modules"
        ,"public"
    ],
    "compileOnSave": false
}
